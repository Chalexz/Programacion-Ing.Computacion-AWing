
def tama単o_num(num):
    tama単o = 0
    while num > 0:
        tama単o += 1
        num= num//10
    return tama単o

def eliminar(elem, lista): #SIRVE
    listaNueva = []
    for i in lista:
        if i != elem:
            listaNueva = listaNueva + [i]
    return listaNueva

def menor(lista): #SIRVE
    menor = 99999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999999
    for i in lista:
        if i < menor:
            menor = i 
    return menor

