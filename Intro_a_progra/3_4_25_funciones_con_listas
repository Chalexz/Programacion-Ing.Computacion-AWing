def descomponer(lista): #SIRVE
    listaPositivos = []
    listaNegativos = []
    listaCero = []
    for i in lista:
        if i > 0:
            listaPositivos = listaPositivos + [i]
        elif i < 0:
            listaNegativos = listaNegativos + [i]
        elif i == 0:
            listaCero = listaCero + [i]
    listagorda = [listaNegativos, listaCero, listaPositivos]
    return listagorda

def substitute(reemplazador, reemplazable, lista): #SIRVE
    listaNueva = []
    for i in lista: 
        if i != reemplazable:
            listaNueva = listaNueva + [i]
        elif i == reemplazable:
            i = reemplazador
            listaNueva = listaNueva + [i]
    return listaNueva
